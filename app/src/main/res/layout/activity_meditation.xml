<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeditationActivity">

    <TextView
        android:id="@+id/textMeditationZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_the_meditation_zone"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kindly_select_the_categories_of_meditation_you_want_to_have"
        app:layout_constraintTop_toBottomOf="@id/textMeditationZone"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:textSize="15sp"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/mindfulFrame"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/textCategory"
        android:background="#F4F4F4"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/mindfulMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mindfulness_meditation"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mindfulOption"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"
                android:contentDescription="TODO" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/mindfulFrame"
        android:background="@color/colorOnboardingIndicatorInactive"
        android:layout_marginTop="3dp"/>

    <FrameLayout
        android:id="@+id/spiritualFrame"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/mindfulFrame"
        android:background="#F4F4F4"
        android:padding="10dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/spiritualMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spiritual_meditation"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/spiritualOption"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"
                android:contentDescription="TODO" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/spiritualFrame"
        android:background="@color/colorOnboardingIndicatorInactive"
        android:layout_marginTop="3dp"/>

    <FrameLayout
        android:id="@+id/focusedFrame"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/spiritualFrame"
        android:background="#F4F4F4"
        android:padding="10dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/focusedMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/focused_meditation"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/focusedOption"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/focusedFrame"
        android:background="@color/colorOnboardingIndicatorInactive"
        android:layout_marginTop="3dp"/>

    <FrameLayout
        android:id="@+id/movementFrame"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/focusedFrame"
        android:background="#F4F4F4"
        android:padding="10dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/movementMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movement_meditation"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movementOption"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/movementFrame"
        android:background="@color/colorOnboardingIndicatorInactive"
        android:layout_marginTop="3dp"/>

    <FrameLayout
        android:id="@+id/transcendentalFrame"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/movementFrame"
        android:background="#F4F4F4"
        android:padding="10dp"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/transcendentalMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transcendental_meditation"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/transcendentalOption"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_to_get_started"
        app:layout_constraintTop_toBottomOf="@id/transcendentalFrame"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="19sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/getStarted"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/the_best"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/goToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/go_back_to_home"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/goToHome"
        app:layout_constraintBottom_toBottomOf="@id/goToHome"
        app:layout_constraintStart_toStartOf="@id/goToHome"
        app:layout_constraintEnd_toEndOf="@id/goToHome"/>




</androidx.constraintlayout.widget.ConstraintLayout>